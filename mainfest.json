{
  "manifest_version": 2,
  "name": "media-tracker",
  "description": "Helps nerds track media.",
  "version": "0.0.1",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png"
  },
  
  "browser_action": {
    "default_icon": {
      "48": "images/icon-48.png" 
    }, 
    "default_title": "Media List"
  },

  "background": {
    "scripts": ["background.js"]
  }, 

  "permissions": [
    "contextMenus", 
    "<all_urls>"
  ]
}
